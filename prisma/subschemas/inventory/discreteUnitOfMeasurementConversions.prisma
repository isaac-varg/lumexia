
model DiscreteUnitOfMeasurementConversion {
    id               String            @id @default(uuid())
    itemId           String            @map("item_id")
    supplierId       String            @map("supplier_id")
    uomAId           String            @map("uom_a_id")
    uomBId           String            @map("uom_b_id")
    conversionFactor Float             @map("conversion_factor")
    createdAt        DateTime          @default(now()) @map("created_at")
    updatedAt        DateTime          @updatedAt @map("updated_at")
    uomA             UnitOfMeasurement @relation("DiscreteUnitOfMeasurementConversionUomA", fields: [uomAId], references: [id])
    uomB             UnitOfMeasurement @relation("DiscreteUnitOfMeasurementConversionUomB", fields: [uomBId], references: [id])
    supplier         Supplier          @relation(fields: [supplierId], references: [id])
    item             Item              @relation(fields: [itemId], references: [id])

    @@unique([itemId, supplierId], name: "item_supplier_unique")
    @@map("discrete_unit_of_measurement_conversions")
}
